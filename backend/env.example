# ITMS Backend Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://itms:secret@localhost:5432/itmsdb
# For SQLite development: sqlite:///./itms.db

# API Configuration
API_TITLE=ITMS API
API_VERSION=1.0.0
API_DESCRIPTION=Integrated Track Monitoring System API

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Storage
STORAGE_PATH=./storage
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,mp4,avi,mov

# Data Retention
DATA_RETENTION_DAYS=30
CLEANUP_INTERVAL_HOURS=24

# Sensor Configuration
MAX_SAMPLE_RATE=1000
DEFAULT_SAMPLE_RATE=200

# Alert Thresholds
VIBRATION_THRESHOLD=2.0
GAUGE_TOLERANCE=0.02
SPEED_THRESHOLD=200

# WebSocket Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30
MAX_WEBSOCKET_CONNECTIONS=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/itms.log

# Redis (for production scaling)
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Development Settings
ENVIRONMENT=development
DEBUG=true
RELOAD=true
